        }
    }

    file_menu := PopupWindow {
        x: file_button.x;
        y: menubar.y + menubar.height;
        Rectangle {
            background: grey;
            VerticalBox {
                Text {
                    width: 200px;
                    height: 25px;
                    text: "Open";
                }

                Text {
                    width: 200px;
                    height: 25px;
                    text: "Save";
                }

                Rectangle {
                    height: 1px;
                    background: lightgrey;
